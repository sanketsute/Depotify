<div id="<%= dom_id product %>" class="w-full p-5 shadow-sm hover:shadow-lg bg-white rounded-lg flex flex-col justify-between">
    <div>
        <div class="mb-3">
            <%= image_tag product.image_url, alt: product.title, class: "max-h-48 mx-auto" %>
        </div>
        <h2 class="font-bold text-xl mb-3"><%= product.title %></h2>
        <p class="mb-3"><%= truncate(strip_tags(product.description), length: 100) %></p>

    </div>
    <div class="flex row space-x-3 mt-5">
        <% unless show_link||=nil %>
            <%= link_to "Show", product, class: "rounded bg-gray-100 border border-black d-block text-blue-500 py-2 px-5" %>
        <% else %>
            <%= link_to "Back to products", products_path, class: "rounded bg-gray-100 border border-black d-block text-black py-2 px-5" %>
        <% end %>
        <%= link_to "Edit", edit_product_path(product), class: "rounded bg-gray-100 border  border-black d-block text-blue-500 py-2 px-5"%>
        <%= button_to "Delete", product, data: { turbo_method: :delete ,turbo_confirm:"Are you sure?"} , class: "rounded  bg-gray-100 border border-black d-block text-red-500 py-2 px-5"%> 
    </div>
</div>
